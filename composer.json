{
    "name": "ghostwriter/result",
    "description": "Provides a Result type implementation for PHP",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "result"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/result",
    "support": {
        "issues": "https://github.com/ghostwriter/result/issues",
        "forum": "https://github.com/ghostwriter/result/discussions",
        "source": "https://github.com/ghostwriter/result",
        "docs": "https://github.com/ghostwriter/result",
        "rss": "https://github.com/ghostwriter/result/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.1,<8.4",
        "ghostwriter/option": "^1.5.1"
    },
    "require-dev": {
        "ghostwriter/coding-standard": "dev-main"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ghostwriter\\Result\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ghostwriter\\Result\\Tests\\Unit\\": "tests/Unit"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "classmap-authoritative": true,
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    },
    "scripts": {
        "cache:clear": [
            "rm -fr ./.cache"
        ],
        "check": [
            "@composer validate",
            "@normalizer",
            "@cs-check",
            "@cs-fix",
            "@test",
            "@psalm",
            "@rector:dry-run",
            "@psalm:security"
        ],
        "cs-check": "vendor/bin/ecs check --clear-cache || true",
        "cs-fix": "vendor/bin/ecs check --fix --clear-cache",
        "dev": [
            "@check",
            "@infection"
        ],
        "infection": [
            "@xdebug",
            "vendor/bin/infection"
        ],
        "missing-returntypes": "psalm --alter --issues=MissingReturnType",
        "normalizer": "composer normalize --no-check-lock",
        "phpbench": "phpbench run",
        "phpunit": "phpunit --colors=always",
        "psalm": "@psalm:shepherd",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:dry-run": "psalm --alter --issues=all --dry-run",
        "psalm:missing": "psalm --alter --issues=MissingReturnType",
        "psalm:security": "psalm --taint-analysis",
        "psalm:shepherd": "psalm --shepherd --stats --no-diff --no-cache",
        "rector": "vendor/bin/rector process",
        "rector:dry-run": "vendor/bin/rector process --dry-run || true",
        "test": [
            "@xdebug",
            "@phpunit"
        ],
        "test:coverage": [
            "@cache:clear",
            "@xdebug",
            "@phpunit"
        ],
        "xdebug": [
            "@putenv XDEBUG_MODE=coverage"
        ]
    }
}
